{
  "name": "acl-nest",
  "version": "0.0.0",
  "description": "ACL nestjs module functionality using casbin package",
  "scripts": {
    "test": "jest --collect-coverage",
    "eslint": "eslint ./src/** --no-error-on-unmatched-pattern",
    "eslint:fix": "eslint ./src/** --fix --no-error-on-unmatched-pattern",
    "eslint:fix:dry": "eslint ./src/** --fix-dry-run --no-error-on-unmatched-pattern",
    "build": "tsc --project ./tsconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Twiddlle/acl-nest.git"
  },
  "main": "index.js",
  "types": "index.d.ts",
  "keywords": [
    "acl",
    "casbin",
    "nest",
    "guard",
    "permission",
    "access control",
    "nestjs"
  ],
  "author": "Twiddle",
  "license": "MIT",
  "devDependencies": {
    "@actions/exec": "^1.1.1",
    "@nestjs/common": "^10.0.2",
    "@nestjs/core": "^10.0.2",
    "@nestjs/platform-express": "^10.0.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.4.0",
    "@types/node": "^16.4.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "express": "^4.18.2",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "rxjs": "^7.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**"
    ]
  },
  "peerDependencies": {
    "@nestjs/common": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0",
    "@nestjs/core": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0",
    "rxjs": ">=6.5.1"
  },
  "dependencies": {
    "casbin": "^5.24.4",
    "reflect-metadata": "^0.1.13"
  }
}
